<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.motif.Model.mapper.PostMapper">
	<resultMap type="Comment" id="comment">
		<result column="comment_id" property="commentId" />
		<result column="post_id" property="postId" />
		<result column="member_id" property="memberId" />
		<result column="parents_id" property="parentsId" />
		<result column="contents" property="contents" />
		<result column="modified_at" property="modifiedAt" />
		<result column="is_deleted" property="isDeleted" />
	</resultMap>
	
	<insert id="commentWrite" parameterType="Comment">
		insert into comments(post_id, member_id,
		contents)
		values(#{postId}, #{memberId}, #{contents})
	</insert>
	
	<insert id="replyWrite" parameterType="Comment">
		insert into comments(post_id, member_id, parents_id, contents)
		values(#{postId}, #{memberId}, #{commentId}, #{contents})
	</insert>
	
	<select id="commentList" parameterType="Long" resultMap="comment">
		select *
		from comments
		where post_id=#{postId}
	</select>
	
	<update id="commentModify" parameterType="Comment">
		update comments
		set contents=#{contents}
		where comment_id=#{commentId}
	</update>
	
	<delete id="commentDelete" parameterType="Long">
		delete from comments
		where comment_id=#{commentId}
	</delete>
	
</mapper>