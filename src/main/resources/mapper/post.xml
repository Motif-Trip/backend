<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="com.ssafy.motif.app.mapper.PostMapper">
	<resultMap type="Post" id="post">
		<result column="post_id" property="postId" />
		<result column="contents" property="contents" />
		<result column="member_id" property="memberId" />
	</resultMap>
	<insert id="postWrite" parameterType="Post">
		insert into posts(contents, member_id)
		values(#{contents}, #{memberId})
	</insert>
	<select id="postList" resultMap="post">
		select post_id, contents, member_id
		from posts
	</select>
	<select id="postSelect" parameterType="Long" resultMap="post">
		select post_id, contents, member_id
		from posts
		where post_id=#{postId}
	</select>
	<update id="postModify" parameterType="Post">
		update posts
		set contents=#{contents}
		where post_id=#{postId}
	</update>
	<delete id="postDelete" parameterType="Long">
		delete from posts
		where post_id=#{postId}
	</delete>
</mapper>